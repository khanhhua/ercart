<div class="ui form">
  <h4 class="ui dividing header">Order Details</h4>
  <div class="two fields">
    <div class="field">
      <label>Reference no.</label>
      {{input value=model.refno readonly=true}}
    </div>
    <div class="field">
      <label>OrderID</label>
      {{input value=model.id readonly=true}}
    </div>
  </div>

  <table class="ui single line table">
    <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Qty</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    {{#each model.items as |item|}}
      <tr>
        <td>{{item.productid}}</td>
        <td>{{item.productname}}</td>
        <td>{{item.qty}}</td>
        <td>{{item.price}}</td>
      </tr>
    {{/each}}
    </tbody>
    <tfoot>
    <tr>
      <th colspan="3" class="text-right">Total</th>
      <th>{{model.total}}</th>
    </tr>
    </tfoot>
  </table>

  <h4 class="ui dividing header">Shipping Information</h4>
  <div class="field">
    <label>Name</label>
    <div class="two fields">
      <div class="field">
        <input type="text" placeholder="First Name">
      </div>
      <div class="field">
        <input type="text" placeholder="Last Name">
      </div>
    </div>
  </div>
  <div class="field">
    <label>Address</label>
    <div class="sixteen wide field">
      <input type="text" placeholder="Address line 1">
    </div>
    <div class="sixteen wide field">
      <input type="text" placeholder="Address line 2">
    </div>

    <div class="four fields">
      <div class="field">
        <label>Town</label>
        <input type="text" placeholder="Town">
      </div>
      <div class="field">
        <label>Postcode</label>
        <input type="text" placeholder="Postcode">
      </div>
      <div class="field">
        <label>Phone</label>
        <input type="text" placeholder="Phone">
      </div>
      <div class="field">
        <label>Country</label>
        <input readonly type="text" value="Singapore">
      </div>
    </div>
  </div>

  <div class="ui divider"></div>

  <button class="ui red button">Cancel Order</button>
  <button class="ui primary button">Resolve</button>
</div>